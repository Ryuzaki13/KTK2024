<Window x:Class="VisitRegistration.View.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisitRegistration.View"
        mc:Ignorable="d"
        Title="AuthorizationWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" MinWidth="160" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Margin="0" Padding="0" Content="Номер телефона"/>
            <TextBox Name="tbPhone" Margin="0 0 0 5" />
            <Button Click="OnSingIn" Margin="0 5 0 0" Content="Войти"/>
        </StackPanel>
    </Grid>
</Window>
