<Window x:Class="VisitRegistration.View.EditLeadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisitRegistration.View"
        mc:Ignorable="d"
        Title="EditLeadingWindow" Height="300" Width="300">
    <StackPanel Width="240" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label Content="Телефон"/>
        <TextBox Text="{Binding Phone}"/>
        <Label Content="Фамилия"/>
        <TextBox Text="{Binding LastName}"/>
        <Label Content="Имя"/>
        <TextBox Text="{Binding FirstName}"/>
        <Label Content="Отчество"/>
        <TextBox Text="{Binding Patronymic}"/>
        <Button Click="OnSave" Content="Сохранить"/>
    </StackPanel>
</Window>
